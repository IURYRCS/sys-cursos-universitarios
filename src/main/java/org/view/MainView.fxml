<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.controller.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="true" text="Cadastros">
                    <items>
                        <MenuItem mnemonicParsing="true" onAction="#showCursoView" text="Cursos" />
                        <MenuItem mnemonicParsing="true" onAction="#showProfessorView" text="Professores" />
                        <MenuItem mnemonicParsing="true" onAction="#showDisciplinaView" text="Disciplinas" />
                        <MenuItem mnemonicParsing="true" onAction="#showTurmaView" text="Turmas" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <AnchorPane fx:id="contentPane" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>
