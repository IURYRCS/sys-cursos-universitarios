<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.controller.CursoController" prefWidth="800.0" prefHeight="400.0">
    <children>
        <GridPane hgap="10.0" vgap="10.0" prefWidth="300.0" maxWidth="300.0" style="-fx-padding: 10;">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="200.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
            </rowConstraints>

            <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nomeTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Carga Horária:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="cargaHorariaTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <children>
                    <Button mnemonicParsing="false" text="Salvar" />
                    <Button mnemonicParsing="false" text="Cancelar" />
                </children>
            </HBox>
        </GridPane>
        <VBox prefWidth="480.0" spacing="10.0" style="-fx-padding: 10;">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Button mnemonicParsing="false" text="Novo" />
                        <Button mnemonicParsing="false" text="Editar" />
                        <Button mnemonicParsing="false" text="Remover" />
                        <Button mnemonicParsing="false" text="Atualizar Lista" />
                    </children>
                </HBox>

                <TableView fx:id="cursoTableView" prefHeight="350.0" prefWidth="480.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nomeColumn" text="Nome" prefWidth="300.0" />
                        <TableColumn fx:id="cargaHorariaColumn" text="Carga Horária" prefWidth="150.0" />
                    </columns>
                </TableView>
            </children>
        </VBox>

    </children>
</HBox>